@model EmployeePutDto;
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Control Panel - Update Form</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Employee</a></li>
                                <li class="breadcrumb-item active">Update</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="card-title">Update Employee</h2>
                        </div>
                        <div class="card-body p-4">

                            <div class="row">
                                <form method="post" enctype="multipart/form-data">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label asp-for="FirstName" class="form-label">FirstName</label>
                                            <input asp-for="FirstName" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="FirstName" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="LastName" for="description-input" class="form-label">LastName</label>
                                            <input asp-for="LastName" class="form-control" type="text" id="description-input">
                                            <span asp-validation-for="LastName" style="color: mediumpurple"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Age" class="form-label">Age</label>
                                            <input asp-for="Age" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="Age" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Email" for="description-input" class="form-label">Email</label>
                                            <input asp-for="Email" class="form-control" type="text" id="description-input">
                                            <span asp-validation-for="Email" style="color: mediumpurple"></span>

                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
                                            <input asp-for="PhoneNumber" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="PhoneNumber" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Address" class="form-label">Address</label>
                                            <input asp-for="Address" class="form-control" type="text" id="title-input">
                                            <span asp-validation-for="Address" style="color: mediumpurple"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="Image" for="file-upload" class="form-label">Upload File</label>
                                            <input asp-for="Image" class="form-control" type="file" id="file-upload" multiple>
                                            <span asp-validation-for="Image" style="color: mediumpurple"></span>

                                        </div>
                                        <div class="mb-3">

                                            <label asp-for="DepartmentId" class="form-label">Select</label>
                                            <select asp-for="DepartmentId" class="form-select">
                                                <option>Select</option>
                                                @foreach (var item in Model.Departments)
                                                {
                                                    <option value="@item.Value">@item.Text</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-5">
                                        <button type="submit" class="btn btn-success btn-lg waves-effect waves-light">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->

    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © MartX.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by <a href="#!" class="text-decoration-underline">Themesbrand</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
<!-- end main content-->
