@model ICollection<EmployeeGetDto>;
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Responsive Tables</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Tables</a></li>
                                <li class="breadcrumb-item active">Responsive Tables</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Example</h4>
                            <p class="card-title-desc">This is an experimental awesome solution for responsive tables with complex data.</p>
                        </div>
                        <div class="card-body">
                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">
                                    <table id="tech-companies-1" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th data-priority="1">FirstName</th>
                                                <th data-priority="1">LastName</th>
                                                <th data-priority="1">Age</th>
                                                <th data-priority="1">PhoneNumber</th>
                                                <th data-priority="1">Email</th>
                                                <th data-priority="1">Adress</th>
                                                <th data-priority="1">Image</th>
                                                <th scope="col">
                                                    <a asp-controller="Employee" asp-action="Create" class="btn btn-success">Create</a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th>@item.Id<span class="co-name">Google Inc.</span></th>
                                                    <td>@item.FirstName</td>
                                                    <td>@item.LastName</td>
                                                    <td>@item.Age</td>
                                                    <td>@item.PhoneNumber</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Address</td>
                                                    <td>
                                                        <button onclick="openImage('@Url.Content("/uploads/" + @item.ImageUrl)')" class="btn btn-secondary">Show Picture</button>
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary btn-rounded waves-effect waves-light mt-2">
                                                            <i class="fa-solid fa-pen"></i>
                                                        </a>
                                                        @if (!item.IsDeleted)
                                                        {
                                                            <a asp-controller="Employee" asp-action="SoftDelete" asp-route-id="@item.Id" class="btn btn-warning btn-rounded waves-effect waves-light mt-2">
                                                                <i class="fa-solid fa-rotate-right"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a asp-controller="Employee" asp-action="Restore" asp-route-id="@item.Id" class="btn btn-secondary btn-rounded waves-effect waves-light mt-2">
                                                                <i class="fa-solid fa-rotate-left"></i>
                                                            </a>
                                                        }
                                                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-rounded waves-effect waves-light mt-2">
                                                            <i class="fa-solid fa-delete-left"></i>
                                                        </a>
                                                        <a asp-controller="Employee" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info btn-rounded waves-effect waves-light mt-2">
                                                            <i class="fa-solid fa-info"></i>
                                                        </a>
                                                    </td>

                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </div>
                    <!-- end card -->
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->


    <footer class="footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6">
                    <script>document.write(new Date().getFullYear())</script> © Minia.
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end d-none d-sm-block">
                        Design & Develop by <a href="#!" class="text-decoration-underline">Themesbrand</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
<!-- end main content-->

<script>
    function openImage(imageUrl) {
        imageUrl = imageUrl.replace("&quot;", ""); // Gereksiz tırnakları temizleme
        let newWindow = window.open("", "_blank", "width=500,height=500");
        newWindow.document.write(`
            <html>
            <head><title>Picture</title></head>
            <body style="display: flex; justify-content: center; align-items: center; height: 100vh; margin: 0;">
                <img src="${imageUrl}" alt="Brand" style="max-width: 100%; max-height: 100%;">
            </body>
            </html>
        `);
    }
</script>